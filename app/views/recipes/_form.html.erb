<%= form_for @recipe do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :photo %>
  <%= f.text_field :photo %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :steps %>
  <%= f.text_area :steps, rows: 10, cols: 65, placeholder: "1) Step 1" %>

  <%= f.submit%>

<% end %>
